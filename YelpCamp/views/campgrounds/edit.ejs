<%- include('../partials/header') %>
<div class='container'>

    <h1 style='text-align: center;'> Edit <%= campground.name %></h1>
    <div style='width: 30%; margin: 25px auto;'>
        <form action='/campgrounds/<%= campground._id %>?_method=PUT' method = 'POST'>
            <div class='form-group'>
                <input type='text' class='form-control' name='name' value = "<%= campground.name %>">
            </div>
            <div class='form-group'>
                <input type='text' class='form-control' name='image' value = "<%= campground.image %>">
            </div>  
            <div class='form-group'>
                <input type='text' class='form-control' name='description' value = "<%= campground.description %>">
            </div>  
            <div class='form-group'>
                <button class='btn btn-lg btn-default btn-block'>Submit</button>
            </div>
        </form>
    </div>
    
    <a href='/campgrounds'>Go Back</a>



<%- include('../partials/footer') %>